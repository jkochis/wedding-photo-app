{
  "name": "wedding-photo-app",
  "version": "1.0.0",
  "type": "module",
  "description": "A mobile-first wedding photo sharing app with TypeScript, face detection, and secure access control",
  "main": "server/index.cjs",
  "scripts": {
    "start": "npm run build:frontend && node server/index.cjs",
    "dev": "npm run build:frontend && npm start",
    "build": "npm run clean:dist && npm run build:frontend && npm run build:server",
    "build:frontend": "cp -r src/types/ src/frontend/types/ && tsc --project tsconfig.frontend.json",
    "build:server": "tsc --project tsconfig.server.json",
    "build:static": "npm run build:frontend && node scripts/build-static.js",
    "build:production": "npm run build && npm run build:static",
    "build:watch": "tsc --project tsconfig.frontend.json --watch",
    "clean:dist": "rm -rf dist/",
    "clean:types": "rm -rf src/frontend/types/",
    "clean:uploads": "rm -rf uploads/* && echo '[]' > server/photos.json",
    "clean": "npm run clean:dist && npm run clean:types && npm run clean:uploads",
    "type-check": "tsc --noEmit",
    "type-check:frontend": "tsc --project tsconfig.frontend.json --noEmit",
    "css:list": "node scripts/css-utils.js list",
    "css:analyze": "node scripts/css-utils.js analyze",
    "css:component": "node scripts/css-utils.js component",
    "css:utility": "node scripts/css-utils.js utility",
    "test": "npm run build:frontend && jest",
    "test:watch": "npm run build:frontend && jest --watch",
    "test:coverage": "npm run build:frontend && jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit"
  },
  "keywords": [
    "wedding",
    "photos",
    "typescript",
    "mobile",
    "pwa",
    "face-detection"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/storage": "^7.12.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.2",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
