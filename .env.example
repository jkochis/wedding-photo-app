# Wedding Photo App - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# ACCESS CONTROL
# =============================================================================

# Custom access token for the wedding gallery
# If not set, a random token will be generated each time the server starts
ACCESS_TOKEN=wedding-photo-gallery-2025

# Server port (default: 3000)
PORT=3000

# =============================================================================
# GOOGLE CLOUD STORAGE CONFIGURATION
# =============================================================================

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Google Cloud Storage bucket name for storing photos
GCS_BUCKET_NAME=your-wedding-photos-bucket

# Path to Google Cloud service account key file
# Download from Google Cloud Console -> IAM & Admin -> Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account-key.json

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment mode
NODE_ENV=development

# For production deployment, set to your domain
ALLOWED_ORIGINS=http://localhost:3000,https://your-username.github.io

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Enable debug logging
DEBUG=false

# Maximum file size in MB (default: 25)
MAX_FILE_SIZE_MB=25

# Maximum number of concurrent uploads
MAX_CONCURRENT_UPLOADS=10