{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ],
  "ts-node": {
    "esm": false,
    "module": "commonjs"
  }
}